<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="co.effectstudios.photox.overview.OverviewFragment"
        android:label="over_view_fragment"
        tools:layout="@layout/over_view_fragment">
        <action
            android:id="@+id/action_showDetails"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="co.effectstudios.photox.detail.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/detail_fragment">
        <argument
            android:name="selectedPhoto"
            app:argType="co.effectstudios.photox.network.PhotoData" />

    </fragment>
</navigation>